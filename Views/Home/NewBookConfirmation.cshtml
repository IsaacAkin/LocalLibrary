@model List<Book>;

@{
    ViewData["Title"] = "New Book Confirmation";
}

<div class="text-center">
    <h1 class="display-4">Confirmation</h1>
    @foreach (Book book in Model)
    {
        <p>A new book has been added to the database:</p>
        <p>'@book.Name' by '@book.Author' has successfully been added to the database with '@book.Copies' copies on: </p>
        <p>'@book.LibraryAcquisitionDate'</p>
        <p>With an ISBN number of: '@book.Isbn'.</p>
    }
</div>